use strict;
use warnings;

print STDERR
  q|---------------------------------------------------------------------------
freedb version 0.0.1 (Aug 19, 2016)
Copyright 2016 by Luciano Xumerle <luciano.xumerle@gmail.com>
This is free software; see the source for copying conditions. There is NO
warranty; not even for MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.
---------------------------------------------------------------------------

SYNTAX:
 > freedb <file1.txt> [file2.txt] ...

|;

my $message = qq|ERROR!\n\n|;
foreach my $file (@ARGV)
{
    next if ( $file !~ m/.+\.txt$/i );
    my @file;
    open( FILE, "< $file" )
      || die $message . "ERROR: File $file is unreadable\n\n";
    while (<FILE>)
    {
        chomp;
        s/^/    /g;
        s/\s\s+/ /g;
        s/\s+$//;
        s/^\s+(?=\d\.)/  /g;
        push @file, $_;
    }
    close FILE;

    print "=== FILE RESULT ===\n";

    open( FILE, "> $file" )
      || die $message . "ERROR: File $file Unwriteable\n\n";
    foreach (@file)
    {
        print FILE $_, "\r\n";
        print $_, "\n";
    }
    close FILE;
}
